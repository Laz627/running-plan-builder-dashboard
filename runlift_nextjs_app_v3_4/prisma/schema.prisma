generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/**
 * SETTINGS — maps to your existing `settings` table.
 * Assumes columns: key TEXT PRIMARY KEY, value TEXT
 */
model Setting {
  key   String @id @db.Text
  value String @db.Text

  @@map("settings")
}

/**
 * RUN LOGS — create these tables if they don’t already exist.
 * Feel free to adjust names/columns if you already created different ones.
 */
model RunLog {
  id              Int      @id @default(autoincrement())
  logDate         DateTime
  runType         String?  @db.Text
  plannedDesc     String?  @db.Text
  targetPaceCool  String?  @db.Text
  targetPaceHeat  String?  @db.Text
  actualDistance  Float?
  actualPace      String?  @db.Text
  rpe             Int?
  notes           String?  @db.Text
  createdAt       DateTime @default(now())

  @@map("run_logs")
}

/**
 * LIFT LOGS
 */
model LiftLog {
  id        Int      @id @default(autoincrement())
  logDate   DateTime
  dayType   String?  @db.Text
  exercise  String?  @db.Text
  weight    Float?
  sets      Int?
  reps      Int?
  rpe       Int?
  notes     String?  @db.Text
  createdAt DateTime @default(now())

  @@map("lift_logs")
}
