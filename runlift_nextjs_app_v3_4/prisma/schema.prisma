generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// SETTINGS table -> maps to existing "settings" with id/key/value
model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique @db.Text
  value String @db.Text

  @@map("settings")
}

// RUN LOGS -> creates/uses table "run_logs"
model RunLog {
  id              Int      @id @default(autoincrement())
  logDate         DateTime
  runType         String?  @db.Text
  plannedDesc     String?  @db.Text
  targetPaceCool  String?  @db.Text
  targetPaceHeat  String?  @db.Text
  actualDistance  Float?
  actualPace      String?  @db.Text
  rpe             Int?
  notes           String?  @db.Text
  createdAt       DateTime @default(now())

  @@map("run_logs")
}

// LIFT LOGS -> creates/uses table "lift_logs"
model LiftLog {
  id        Int      @id @default(autoincrement())
  logDate   DateTime
  dayType   String?  @db.Text
  exercise  String?  @db.Text
  weight    Float?
  sets      Int?
  reps      Int?
  rpe       Int?
  notes     String?  @db.Text
  createdAt DateTime @default(now())

  @@map("lift_logs")
}
