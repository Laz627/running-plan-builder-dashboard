generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* SETTINGS â€” matches an existing table with:
   id SERIAL PRIMARY KEY, key TEXT UNIQUE, value TEXT
   (If your column names differ by case, add @map("colname") on those fields.)
*/
model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique @db.Text
  value String @db.Text

  @@map("settings")
}

/* RUN LOGS */
model RunLog {
  id              Int      @id @default(autoincrement())
  logDate         DateTime
  runType         String?  @db.Text
  plannedDesc     String?  @db.Text
  targetPaceCool  String?  @db.Text
  targetPaceHeat  String?  @db.Text
  actualDistance  Float?
  actualPace      String?  @db.Text
  rpe             Int?
  notes           String?  @db.Text
  createdAt       DateTime @default(now())

  @@map("run_logs")
}

/* LIFT LOGS */
model LiftLog {
  id        Int      @id @default(autoincrement())
  logDate   DateTime
  dayType   String?  @db.Text
  exercise  String?  @db.Text
  weight    Float?
  sets      Int?
  reps      Int?
  rpe       Int?
  notes     String?  @db.Text
  createdAt DateTime @default(now())

  @@map("lift_logs")
}
