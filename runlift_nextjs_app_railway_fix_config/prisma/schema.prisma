generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// <-- Map to existing table: settings
model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String

  @@map("settings")
}

// <-- Map to existing table: run_logs
model RunLog {
  id              Int      @id @default(autoincrement())
  logDate         DateTime
  runType         String?
  plannedDesc     String?
  targetPaceCool  String?
  targetPaceHeat  String?
  actualDistance  Float?
  actualPace      String?
  rpe             Int?
  notes           String?
  createdAt       DateTime @default(now())

  @@map("run_logs")
}

// <-- Map to existing table: lift_logs
model LiftLog {
  id        Int      @id @default(autoincrement())
  logDate   DateTime
  dayType   String?
  exercise  String?
  weight    Float?
  sets      Int?
  reps      Int?
  rpe       Int?
  notes     String?
  createdAt DateTime @default(now())

  @@map("lift_logs")
}
