
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Setting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model RunLog {
  id              Int      @id @default(autoincrement())
  logDate         DateTime
  runType         String?
  plannedDesc     String?
  targetPaceCool  String?
  targetPaceHeat  String?
  actualDistance  Float?
  actualPace      String?
  rpe             Int?
  notes           String?
  createdAt       DateTime @default(now())
}

model LiftLog {
  id        Int      @id @default(autoincrement())
  logDate   DateTime
  dayType   String?
  exercise  String?
  weight    Float?
  sets      Int?
  reps      Int?
  rpe       Int?
  notes     String?
  createdAt DateTime @default(now())
}
